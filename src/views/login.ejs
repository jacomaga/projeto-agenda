<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
    
      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se você não possui cadastro, cadastre-se preenchendo os campos abaixo!</p>
          
          <form class="form-cadastro" action="/login/register" method="POST">
            
            <div class="alert-danger" id="painel-mensagens">
              <p class="mensagem-front"></p>
             
            </div>
            <%- include('includes/messages')%>
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email</label>
              <input type="email" class="form-control emailCadastro"  aria-describedby="emailHelp" name="email">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">password</label>
              <input type="password" class="form-control senhaCadastro"  name="password">
            </div>
  
            <button type="submit" class="btn btn-primary">Criar</button>
          </form>
        
        </div>


        <div class="col-lg">
          <h4>Entrar no sistema</h4>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <%- include('includes/messagesLogin')%>
              <label for="exampleInputEmail1" class="form-label">Email</label>
              <input type="email" class="form-control"  aria-describedby="emailHelp" name="email">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">password</label>
              <input type="password" class="form-control"  name="password">
            </div>
  
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
    